# ============================================================
# OpenClaw NexusMind - Variables d'environnement
# Copier ce fichier : cp .env.example .env
# Puis remplir les valeurs necessaires
# ============================================================

# ── LLM Providers (au moins un requis) ─────────────────────────

# Anthropic (Claude) - Recommande
ANTHROPIC_API_KEY=
ANTHROPIC_ENABLED=true
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# OpenAI (GPT) - Optionnel
OPENAI_API_KEY=
OPENAI_ENABLED=false
OPENAI_MODEL=gpt-4o

# Ollama (local) - Optionnel
OLLAMA_ENABLED=false
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2

# ── Application ────────────────────────────────────────────────

# Port expose sur l'hote (le port interne est toujours 18789)
OPENCLAW_PORT=18789

# Nom personnalise de l'instance
OPENCLAW_APP_NAME=OpenClaw

# Niveau de log : DEBUG, INFO, WARNING, ERROR
OPENCLAW_LOGGING__LEVEL=INFO

# Mode debug (true/false)
OPENCLAW_DEBUG=false

# Protection API par cle (true/false)
OPENCLAW_API_KEY_REQUIRED=false

# ── Domaine & SSL ──────────────────────────────────────────────

# Domaine pour le certificat SSL (laisser vide = pas de SSL)
DOMAIN=
# Email pour Let's Encrypt
CERTBOT_EMAIL=

# ── Ressources Docker ──────────────────────────────────────────

# Limite memoire du container (adapter selon VPS)
# Hostinger KVM 1 : 256M | KVM 2 : 512M | KVM 4+ : 1G
MEMORY_LIMIT=512M

# Limite CPU (nombre de cores)
CPU_LIMIT=1.0

# ── Timezone ───────────────────────────────────────────────────
TZ=Europe/Paris
